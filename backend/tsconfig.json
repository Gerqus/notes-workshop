{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@/*": [ "./src/*" ], // scisle powiazane z moim pluginem do gulpa. To jest jedyna sciezka, ktora jest obslugiwana
    },
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  }
}