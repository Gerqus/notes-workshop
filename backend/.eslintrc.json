{
    "env": {
        "browser": false,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "require-atomic-updates": "error",
        "block-scoped-var": "error",
        "class-methods-use-this": "error",
        "complexity": [
            "error",
            15
        ],
        "consistent-return": [
            "error",
            {"treatUndefinedAsUnspecified": true}
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "dot-notation": "error",
        "eqeqeq": "error",
        "guard-for-in": "error",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-multi-spaces": "error",
        "no-sequences": "error",
        "radix": "error",
        "require-await": "error",
        "yoda": "error",
        "no-unmodified-loop-condition": "error",
        "no-shadow": "error",
        "no-use-before-define": "error",
        "no-new-require": "error",
        "init-declarations": ["error", "always"],
        "no-useless-return": "error",
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "camelcase": "error",
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "never",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": "error",
        "eol-last": "error"
    }
}